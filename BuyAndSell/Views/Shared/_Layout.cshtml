<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Buy&Sell</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="~/style.css" />
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" style="background:#000000;">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Buy&Sell", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav" >
                    <li>@Html.ActionLink("ADD PRODUCT", "SelectCategory", "Products")</li>
                </ul>
                <ul class="nav navbar-nav" style="float:right;">
                    <li style="width:100%;">
                        @using (Html.BeginForm("Search", "Home", FormMethod.Post))
                        {
                            <input type="search" name="Search" class="search" placeholder="Search" value="@ViewBag.search"/>
                            <input type="submit" value="Search" class="button" />
                        }
                    </li>

                </ul>

            </div>
        </div>
    </div>
    <div class="navbar navbar-inverse" style="background:#353535;border-radius:0;">
        <div class="container">
            <div class="navbar-header Category">
                <ul>
                    @Html.Action("Homepage", "Home")
                </ul>
            </div>
        </div>
    </div>


    <div class="container body-content">
        @RenderBody()
        <footer class="navbar-fixed-bottom center">
            <p>&copy;Antonio Andrašek</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>

